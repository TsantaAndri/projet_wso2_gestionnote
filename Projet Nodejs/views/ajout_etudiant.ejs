<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, unitial-scale=1.0">
        <link rel="stylesheet" href="/assets/semantic/semantic.css">
        <link rel="stylesheet" href="/assets/style.css">
        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/semantic/semantic.js"></script>
        <title>Gestion des notes</title>
    </head>

    <body>

        <!--- side bar --->
            <%- include('sidebar'); -%>
        <!--- side bar --->

        <!--- top nav --->
        <nav class="ui top fixed inverted menu">
            <div class="left menu">
                <a href="#" class="siderbar-menu-togglar item" data-target="#sideber">
                    <i class="sidebar icon"></i>
                </a>
                <a href="#" class="header item">
                    GESTION DES NOTES
                </a>
            </div>
            <div class="right menu">
                <a href="#" class="item">
                    <i class="bell icon"></i>
                </a>
                <div class="ui dropdown item">
                    <i class="ui user circle icon"></i>
                    <div class="menu">
                        <a href="#" class="item">
                            <i class="info circle icon"></i> Profile
                        </a>
                        <a href="#" class="item">
                            <i class="wrench icon"></i> Paramètres
                        </a>
                        <a href="#" class="item">
                            <i class="sign-out icon"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        <!--- top nav --->

        <!--- section --->

        <div class="pusher" style="margin-left: 20px; margin-right: 20px;">
            <div class="main-content">
                <h1 style="text-align: center; margin-top: 60px;"><i class="ui icon user plus"></i> Ajouter un étudiant</h1>
                    <div class="ui segment">
                        <% if (locals.flash && locals.flash.error) { %>
                            <div class="ui mini red message mt-3">
                                <i class="close icon"></i>
                                <div class="header"><h3 style="text-align: center;">Alerte !</h3></div>
                                <div class="list">
                                    <h5 style="text-align: center;"><%= flash.error %></h5>
                                </div>
                            </div>
                        <% } %>
                        <form action="/enregistrer" method="post" class="ui form">
                            <div class="field">
                                <label>N° Inscription :</label>
                                <input type="text" name="num" placeholder="Entrez votre numéro..." required>
                            </div>
                            <div class="field">
                                <label>Nom :</label>
                                <input type="text" name="nom" placeholder="Entrez votre nom..." required>
                            </div>
                            <div class="field">
                                <label>Adresse :</label>
                                <input type="text" name="adresse" placeholder="Entrez votre adresse..." required>
                            </div>
                            <div class="field">
                                <label>Date de naissance :</label>
                                <input type="text" name="dateNaissance" placeholder="votre date de naissance..." required>
                            </div>
                            <div class="field">
                                <label>Sexe :</label>
                                <div class="ui selection dropdown">
                                    <input type="hidden" name="sexe">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">Sexe</div>
                                    <div class="menu">
                                        <div class="item" data-value="Homme">Homme</div>
                                        <div class="item" data-value="Femme">Femme</div>
                                    </div>
                                </div>
                            </div>
                            <div class="field">
                                <label>Année :</label>
                                <div class="ui selection dropdown">
                                    <input type="hidden" name="annee">
                                    <i class="dropdown icon"></i>
                                    <div class="default text">Année</div> 
                                    <div class="menu">
                                        <div class="item" data-value="L1">L1</div>
                                        <div class="item" data-value="L2">L2</div>
                                        <div class="item" data-value="L3">L3</div>
                                        <div class="item" data-value="M1">M1</div>
                                        <div class="item" data-value="M2">M2</div>
                                    </div>
                                </div>
                            </div>
                            <button class="ui button blue" type="submit"><i class="ui icon save"></i> Enregistrer</button>
                            <a href="/listes_etudiant" class="ui button orange" type="submit"><i class="ui icon close"></i> Annuler</a>
                        </form>
                    </div>              
            </div>
        </div>

        <!--- section --->

        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/semantic/semantic.js"></script>
        <script src="/assets/script.js"></script>

        <script>
            $(document).ready( function(){
                $('.close').click(function(){
                    $('.message').hide('slow');
                });
            });
        </script>

    </body>
</html>